<style>
    @media (max-width: 640px) {
    .section-height-blocks {
        height: 70rem;
    }
    .block-body {
        font-size: 12px;
    }
  }
  
  @media (min-width: 641px) {
    .section-height-blocks {
        height: 100vh;
    }
    .block-box {
        height: 175px;
    }
  }
</style>
<section class="relative section-height-blocks">

    <!-- Section background (needs .relative class on parent and next sibling elements) -->
    <div class="absolute inset-0 top-1/2 md:mt-24 lg:mt-0 bg-purple-500 pointer-events-none" aria-hidden="true"></div>
    <div class="absolute left-0 right-0 bottom-0 m-auto w-px p-px h-20 bg-gray-200 transform translate-y-1/2"></div>

    <div class="relative max-w-6xl mx-auto px-4 sm:px-6">
        <div class="py-12 md:py-20">

            <!-- Section header -->
            <div class="max-w-3xl mx-auto text-center pb-12 md:pb-20">
                <h2 class="h2 mb-4"><span class="bg-clip-text text-transparent bg-gradient-to-r bg-purple-1000">{{solution_heading}}</span></h2>
            </div>

            <!-- Items -->
            <div class="max-w-sm mx-auto grid gap-6 md:grid-cols-2 lg:grid-cols-2 items-start md:max-w-2xl lg:max-w-none">

                <!-- 1st item -->
                {{#solution_benefits}}
                {{#learn_more}}
                <a href="{{link}}">
                {{/learn_more}}
                <div class="relative flex flex-col items-center p-6 bg-white rounded shadow-xl block-box">
                    <img class="relative" src="{{image}}" style="height: 30px;" />
                    <h4 class="text-xl font-bold leading-snug tracking-tight mb-2 mt-1 text-center">{{title}}</h4>
                    <p class="text-gray-600 text-center block-body">{{body}}</p>
                </div>
                {{#learn_more}}
                </a>
                {{/learn_more}}
                {{/solution_benefits}}

                <!-- 2nd item -->
                

                <!-- 3rd item -->
                

                <!-- 4th item -->
                

                <!-- 5th item -->
                

                <!-- 6th item -->
                
                
            </div>

        </div>
    </div>
</section>