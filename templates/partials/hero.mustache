<style>
    @media (max-width: 640px) {
        .section-height-hero {
            height: 45rem;
        }
      }
      
      @media (min-width: 641px) {
        .section-height-hero {
            height: 100vh;
        }
      }
</style>
<section class="relative section-height-hero">

    <!-- Illustration behind hero content -->
    <div class="absolute left-1/2 transform -translate-x-1/2 bottom-0 pointer-events-none -z-1" aria-hidden="true">
        <svg width="1360" height="578" viewBox="0 0 1360 578" xmlns="http://www.w3.org/2000/svg">
            <defs>
                <linearGradient x1="50%" y1="0%" x2="50%" y2="100%" id="illustration-01">
                    <stop stop-color="#FFF" offset="0%" />
                    <stop stop-color="#e7dbfc" offset="77.402%" />
                    <stop stop-color="#DFDFDF" offset="100%" />
                </linearGradient>
            </defs>
            <g fill="url(#illustration-01)" fill-rule="evenodd">
                <circle cx="1232" cy="128" r="128" />
                <circle cx="155" cy="443" r="64" />
            </g>
        </svg>
    </div>

    <div class="max-w-6xl mx-auto px-4 sm:px-6">

        <!-- Hero content -->
        <div class="pt-32 pb-4 md:pt-32 md:pb-4">

            <!-- Section header -->
            <div class="text-center pb-4 md:pb-4">
                <h1 class="text-5xl md:text-6xl font-extrabold leading-tighter tracking-tighter mb-4" data-aos="zoom-y-out"><span class="bg-clip-text text-transparent bg-gradient-to-r from-purple-500 to-purple-200">{{company_name}}</span></h1>
                <div class="max-w-3xl mx-auto">
                    <p class="text-xl text-gray-600 mb-4" data-aos="zoom-y-out" data-aos-delay="150">{{hero_slogan}}</p>
                </div>

            </div>

            <!-- Hero image -->
            
        </div>
        <div x-data="{ modalExpanded: false }">
            <div class="relative flex justify-center mb-8" data-aos="zoom-y-out" data-aos-delay="450">
                <div class="flex flex-col justify-center">
                    <img class="mx-auto rounded shadow-xl" src="{{image}}" width="500" height="200" alt="Hero" />
                </div>
            </div>
        </div>

    </div>
</section>